{% extends 'base.html.twig' %}

{% block title %}Vente
{% endblock %}

{% block body %}
	<div class="container mb-5">
		<div class="row justify-content-center p-2">
			<h1 class="mt-3">Vente</h1>

			{% for voiture in voiture %}
				<div class="col-sm-3 mt-4 border mb-4 mx-3">
					<h2 class="p-2 text-center">{{ voiture.marque }}
						{{ voiture.modele }}</h2>
					<a href="{{ path('vente_show', {'id':voiture.id})}}">
						<img class="image-voiture img-fluid" src="{{voiture.image}}">
					</a>
					<p class="mt-3">Kilométrage :
						{{ voiture.km }}
						km
					</p>
					<p class="mt-2">Prix :
						{{ voiture.prix }}
						€</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
